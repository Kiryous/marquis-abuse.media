.button {
	background: transparent;
	border: 1px solid #8c8c8c;
	padding: 10px 15px;
	margin-right: 15px;
	font-family: sans-serif;
	color: #8c8c8c;
	font-size: 16px;
	font-weight: bold;
	border-radius: 3px;
	outline: none;
	text-decoration: none;
	transition: 0.1s;
	cursor: pointer;
  user-select: none;
}

.button:hover,
.button_selected {
	background: #8c8c8c;
	border-color: #8c8c8c;
	color: #fff;
}
